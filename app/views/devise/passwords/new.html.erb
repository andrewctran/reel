<div class="spinnerSmall"></div>
      <div class="container">
        <div class="container__content  centre--element  push--top-three-spaces">

          <nav class="clearfix  max-width--960  centre--element visuallyhidden text--smaller">
            <div class="float--right  text--uppercase  reduce-opacity--60">
              <%= link_to "Sign in", new_session_path(resource_name) %>
            </div>
          </nav>

          <section class="main-text  push--top-five-spaces  text--centre">

            <div class="main-text__cta">
				<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
				  <%= devise_error_messages! %>

				  <div>
				  <%= f.email_field :email, :autofocus => true, :style => "border-radius:21px; height:30px; width: 170px; border:none; padding:6px 12px; font-size:14px; margin-bottom:15px; margin-top:7%; outline:none;", :placeholder => "Email"  %></div>

				  <div><%= f.submit "Help!", :style => "-webkit-appearance: none;outline: 0;border: 0;padding: 9.23077px 24px 13.2px;font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,sans-serif;border-radius: 36px;display: inline-block;text-decoration: none!important;-webkit-box-shadow: 0 1px 4px rgba(0,0,0,.33);-moz-box-shadow: 0 1px 4px rgba(0,0,0,.33);box-shadow: 0 1px 4px rgba(0,0,0,.33);text-shadow: 0 -1px 1px rgba(0,0,0,.5);-webkit-transition: all .2s ease-in-out;-moz-transition: all .2s ease-in-out;-o-transition: all .2s ease-in-out;transition: all .2s ease-in-out;font-size: 1.3em;color: #fff;background: #50c1f6;background-image: -webkit-gradient(linear,50% 0,50% 100%,color-stop(0%,#50c1f6),color-stop(100%,#009be4));background-image: -webkit-linear-gradient(#50c1f6,#009be4);background-image: -moz-linear-gradient(#50c1f6,#009be4);background-image: -o-linear-gradient(#50c1f6,#009be4);background-image: linear-gradient(#50c1f6,#009be4); width:194px; margin-top:20px;" %></div>
				<% end %>
            </div>
          </section>
        </div>
      </div>

      <!-- Background image -->
      <div class="bg-wrapper visuallyhidden">
        <%= image_tag "bg.jpg" , :class => "bg-wrapper__image" %>
      </div>

      <!-- JS scripts -->
      <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
      <%= javascript_include_tag "app.min.js" %>

